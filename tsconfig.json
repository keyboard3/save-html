{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "es6",
    "lib": ["ESNext"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types/", "src/types"]
  },
  "include": [
    "src/**/*",
    "package/*",
    "webpack.ts"
  ]
}
